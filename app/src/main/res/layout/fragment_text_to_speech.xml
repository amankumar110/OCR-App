<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextToSpeechFragment">

    <EditText
        android:id="@+id/et_input_text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_20_no_border_background"
        android:gravity="start"
        android:hint="Enter Your Text Here"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/colorWhite50"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_speak"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:contentDescription="TODO"
        android:background="@android:color/transparent"
        android:src="@drawable/text_to_speech"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_input_text"
        app:layout_constraintEnd_toEndOf="@+id/et_input_text"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/btn_pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:background="@drawable/rounded_40_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_input_text" />

</androidx.constraintlayout.widget.ConstraintLayout>